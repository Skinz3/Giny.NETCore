<UserControl x:Class="Giny.MapEditor.TileSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Giny.MapEditor"
             mc:Ignorable="d" Height="246" Width="1920" >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0" x:Name="elementCategory" >
        </ListView>

        <ScrollViewer Name="scrollViewer" ScrollChanged="ScrollViewer_ScrollChanged" HorizontalAlignment="Left" Grid.Column="1"   >
            <Canvas x:Name="tileCanvas"></Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
